@model Login_Register_wrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css"/>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" 
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" 
        crossorigin="anonymous"></script>
    <script src="~/js/script.js"></script>
</head>
<body>
    <div class="container">
        <div class="jumbotron" id="meta_info" user_id=@ViewBag.userId>
            <a href="/">&#x2630; Home</a>
            <h1 class="text-center">All Drums Sheets</h1>
        </div>
        <table class="table-dark table-striped col-sm-12">
            <thead>
                <tr>
                    <th class="col-sm-6">Title</th>
                    <th class="col-sm-3">Author</th>
                    <th class="col-sm-3">Likes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.AllBeats)
                {
                    <tr>
                        <td><a href="/detail/@item.SheetId">@item.Title</a></td>
                        <td><span class="badge badge-light">@item.Creator.Name</span></td>
                        <td class="text-center">@item.Likes.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>